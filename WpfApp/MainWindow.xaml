<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

        <StackPanel x:Name="StackRoot">
            <TextBlock Text="Enter your name:" />
            <TextBox x:Name="txtName" TextChanged="txtName_TextChanged" AutomationProperties.AutomationId="txtName" />
            <Button Click="OnSayHello" x:Name="sayHelloButton" AutomationProperties.AutomationId="sayHelloButton" Content="Say hello" />
            <TextBlock x:Name="txtResult" AutomationProperties.AutomationId="txtResult"/>
        </StackPanel>

</Window>
